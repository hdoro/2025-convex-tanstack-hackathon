{
	"include": ["**/*.ts", "**/*.tsx"],
	"compilerOptions": {
		"target": "ES2022",
		"jsx": "react-jsx",
		"module": "ESNext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"types": ["vite/client"],
		"isolatedModules": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": false,
		"noEmit": true,

		/* Linting */
		"skipLibCheck": true,
		"strict": true,
		"paths": {
			"@/*": ["./src/*"],
			"@db/*": ["./convex/*"]
		},
		"plugins": [
			{
				"name": "@effect/language-service"
			}
		]
	}
}
